%h1=t('.title')
%p=t('.contact_us')

= form_tag request_contact_path, method: 'post' do
  = label_tag :name, t('.name')
  = text_field_tag :name, '', title: t('.enter_name'), size: 20, required: true
  %br
  %br
  = label_tag :email, t('.email')
  = email_field_tag :email, '', title: t('.enter_email')
  %br
  %br
  = label_tag :telephone, t('.telephone')
  = telephone_field_tag :telephone, '', title: t('.enter_telephone'), required: true
  %br
  %br
  = label_tag :message, t('.message')
  = text_area_tag :message, '', title: t('.enter_message'), required: true
  %br
  %br
  = submit_tag t('.submit')
