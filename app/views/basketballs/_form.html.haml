= form_for @basketball do |f|
  - if @basketball.errors.any?
    #error_explanation
      %h2= "#{pluralize(@basketball.errors.count, "error")} prohibited this basketball from being saved:"
      %ul
        - @basketball.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :team
    = f.text_field :team
  .field
    = f.label :facts
    = f.text_area :facts
  .actions
    = f.submit 'Save'
